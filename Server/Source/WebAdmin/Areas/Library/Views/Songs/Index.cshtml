@{
}
@using Splatrika.BronyMusicBrowser.Core.Entities
@using Splatrika.BronyMusicBrowser.WebAdmin.Areas.Library.ViewModels

@model IndexViewModel<Song>

@{
    var nextPage = Model.Page + 1;
    var previousPage = Model.Page - 1;
}

<div class="mb-5">
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model.Items)
        {
            <tr>
                <td>@song.Id</td>
                <td>@song.Title</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@song.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@song.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Page > 0)
{
    <a class="btn" asp-action="Index" asp-route-page="@previousPage">Previous page</a>
}
@if (Model.Items.Count() == Model.PageStep)
{
    <a class="btn" asp-action="Index" asp-route-page="@nextPage" asp-route-previousPage="@Model.Page">
        Next page
    </a>
}
