@model IndexPartialViewModel
@{
    var nextPage = Model.Page + 1;
    var previousPage = Model.Page - 1;
}

<div class="mb-5">
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>

<partial name="_IndexBasePartial" model="Model" />

@if (Model.Page > 0)
{
    <a class="btn" asp-action="Index" asp-route-page="@previousPage">Previous page</a>
}
@if (Model.Items.Count() == Model.PageStep)
{
    <a class="btn" asp-action="Index" asp-route-page="@nextPage" asp-route-previousPage="@Model.Page">
        Next page
    </a>
}